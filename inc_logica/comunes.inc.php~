<?
session_start();

if(!isset($_SESSION[Constantes::SITIO_SESION][Constantes::SECCION_SESION_WEB])) $_SESSION[Constantes::SITIO_SESION][Constantes::SECCION_SESION_WEB]=array();
$sesion=&$_SESSION[Constantes::SITIO_SESION][Constantes::SECCION_SESION_WEB];

if(!isset($sesion['web_activa']) die();

if(!isset($sesion['idioma_web'])) $sesion['idioma_web']=null;
if(!isset($sesion['id_visita'])) $sesion['id_visita']=null;

$IDIOMAS_CARGAR='comunes';
$IDIOMA=new Idioma($sesion['idioma_web']);

if(!$sesion['id_visita'])
{
	$sesion['id_visita']=Visita::crear_nueva_visita();
}

$VISITA=new Visita($sesion['id_visita']);
$VISITA->actualizar($IDIOMA->acc_idioma());
?>
